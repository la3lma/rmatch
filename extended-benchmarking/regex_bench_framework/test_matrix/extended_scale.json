{
  "phase": "extended_scale",
  "description": "Extended scale testing with large corpus sizes and patterns - requires safe 10K patterns",
  "goals": [
    "Test performance characteristics at very large input sizes (500MB, 1GB)",
    "Validate engine stability with large datasets",
    "Measure memory consumption and timeouts at scale",
    "Test the new 10,000 safe pattern dataset"
  ],
  "methodology": {
    "measurement_protocol": {
      "warmup_runs": 3,
      "measurement_runs": 5,
      "discard_outliers": true,
      "outlier_threshold": "1.5*IQR",
      "confidence_level": 0.95
    },
    "fairness_rules": {
      "engine_configurations": "best_reasonable",
      "separate_compilation_scanning": true,
      "common_subset_comparison": true,
      "resource_limits": {
        "max_memory_gb": 16,
        "timeout_minutes": 60
      }
    }
  },
  "test_matrix": {
    "pattern_counts": [100, 1000, 10000],
    "input_sizes": ["100MB", "500MB", "1GB"],
    "pattern_suites": ["log_mining"],
    "corpora": ["synthetic_controllable"],
    "engines": [
      "java-native-optimized",
      "java-native-unfair",
      "re2j",
      "rmatch"
    ],
    "iterations_per_combination": 5,
    "warmup_iterations": 3
  },
  "engine_configurations": {
    "java-native-optimized": {
      "jvm_flags": ["-Xmx8g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "java-native-unfair": {
      "jvm_flags": ["-Xmx8g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "re2j": {
      "jvm_flags": ["-Xmx8g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "rmatch": {
      "optimization_flags": "default",
      "mode": "batch_processing",
      "notes": "Target engine for large-scale comparison"
    }
  },
  "data_configuration": {
    "pattern_generation": {
      "suite": "log_mining",
      "seed": 12345,
      "distribution": {
        "timestamps": 0.25,
        "ips": 0.20,
        "urls": 0.25,
        "error_codes": 0.15,
        "key_values": 0.15
      },
      "complexity_target": "realistic",
      "safety_validation": "required"
    },
    "corpus_generation": {
      "type": "synthetic_controllable",
      "match_density": "medium",
      "line_count_target": {
        "100MB": 2000000,
        "500MB": 10000000,
        "1GB": 20000000
      },
      "character_distribution": "log_like",
      "unicode_support": false
    }
  },
  "success_criteria": {
    "correctness": {
      "match_count_agreement": "exact",
      "reference_engines": ["java-native-optimized", "re2j"],
      "tolerance": 0,
      "validation_required": true
    },
    "performance": {
      "primary_claims": {
        "large_scale_stability": {
          "metric": "completion_rate",
          "target": ">95%",
          "required_significance": 0.01
        },
        "memory_scaling": {
          "metric": "memory_usage_vs_input_size",
          "target": "linear_or_sublinear",
          "max_overhead": "2x"
        }
      },
      "secondary_claims": {
        "timeout_resilience": {
          "metric": "timeout_rate",
          "target": "<5%",
          "baseline": "all_engines"
        },
        "throughput_maintenance": {
          "metric": "throughput_degradation",
          "target": "gradual_only",
          "max_degradation": 0.7
        }
      }
    },
    "statistical_validity": {
      "min_sample_size": 5,
      "required_confidence": 0.90,
      "max_coefficient_variation": 0.20,
      "outlier_detection": "required"
    }
  },
  "execution_plan": {
    "estimated_duration": "4-8 hours",
    "parallel_execution": {
      "max_concurrent_engines": 1,
      "resource_isolation": true
    },
    "checkpoints": [
      "engine_availability_check",
      "safe_pattern_validation",
      "large_corpus_setup",
      "memory_limit_verification",
      "timeout_configuration",
      "performance_measurement"
    ],
    "failure_handling": {
      "engine_unavailable": "skip_with_warning",
      "correctness_mismatch": "abort_with_error",
      "performance_timeout": "record_partial_results",
      "memory_exceeded": "record_failure_and_continue"
    }
  },
  "output_configuration": {
    "results_format": "structured_json",
    "include_raw_data": true,
    "include_debug_info": true,
    "compression": "gzip",
    "schema_version": "2.0"
  }
}