{
  "phase": "safe_10k_validation",
  "description": "Validation test for new 10,000 safe patterns - ensures engine compatibility",
  "goals": [
    "Validate that all 10,000 safe patterns work correctly across all engines",
    "Establish baseline performance characteristics for the large pattern set",
    "Verify no engine crashes or timeouts with the safe pattern dataset",
    "Test pattern compilation times at scale"
  ],
  "methodology": {
    "measurement_protocol": {
      "warmup_runs": 2,
      "measurement_runs": 3,
      "discard_outliers": false,
      "outlier_threshold": "2.0*IQR",
      "confidence_level": 0.95
    },
    "fairness_rules": {
      "engine_configurations": "best_reasonable",
      "separate_compilation_scanning": true,
      "common_subset_comparison": true,
      "resource_limits": {
        "max_memory_gb": 8,
        "timeout_minutes": 30
      }
    }
  },
  "test_matrix": {
    "pattern_counts": [10000],
    "input_sizes": ["1MB", "10MB", "100MB"],
    "pattern_suites": ["log_mining"],
    "corpora": ["synthetic_controllable"],
    "engines": [
      "java-native-optimized",
      "java-native-unfair",
      "re2j",
      "rmatch"
    ],
    "iterations_per_combination": 3,
    "warmup_iterations": 2
  },
  "engine_configurations": {
    "java-native-optimized": {
      "jvm_flags": ["-Xmx6g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "java-native-unfair": {
      "jvm_flags": ["-Xmx6g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "re2j": {
      "jvm_flags": ["-Xmx6g", "-XX:+UseG1GC", "-server"],
      "compilation_strategy": "precompile_patterns",
      "optimization_level": "production"
    },
    "rmatch": {
      "optimization_flags": "default",
      "mode": "batch_processing",
      "notes": "Primary validation target for safe patterns"
    }
  },
  "data_configuration": {
    "pattern_generation": {
      "suite": "log_mining",
      "use_safe_patterns": true,
      "pattern_file": "patterns_10000.txt",
      "metadata_file": "patterns_10000_metadata.json",
      "validation_required": true
    },
    "corpus_generation": {
      "type": "synthetic_controllable",
      "match_density": "medium",
      "line_count_target": {
        "1MB": 20000,
        "10MB": 200000,
        "100MB": 2000000
      },
      "character_distribution": "log_like",
      "unicode_support": false
    }
  },
  "success_criteria": {
    "correctness": {
      "match_count_agreement": "exact",
      "reference_engines": ["java-native-optimized", "re2j"],
      "tolerance": 0,
      "validation_required": true
    },
    "safety": {
      "engine_crash_rate": {
        "metric": "crash_count",
        "target": "0",
        "required": true
      },
      "timeout_rate": {
        "metric": "timeout_percentage",
        "target": "<1%",
        "required": true
      },
      "compilation_success": {
        "metric": "pattern_compilation_rate",
        "target": "100%",
        "required": true
      }
    },
    "performance": {
      "compilation_time": {
        "metric": "patterns_per_second_compilation",
        "target": ">100",
        "baseline": "reasonable"
      },
      "scanning_throughput": {
        "metric": "throughput_degradation",
        "target": "<50%_vs_1k_patterns",
        "baseline": "1000_pattern_equivalent"
      }
    }
  },
  "execution_plan": {
    "estimated_duration": "2-3 hours",
    "parallel_execution": {
      "max_concurrent_engines": 1,
      "resource_isolation": true
    },
    "checkpoints": [
      "safe_pattern_availability_check",
      "pattern_file_validation",
      "engine_compatibility_test",
      "compilation_validation",
      "basic_scanning_test",
      "full_performance_measurement"
    ],
    "failure_handling": {
      "pattern_file_missing": "abort_with_error",
      "engine_crash": "record_and_continue",
      "compilation_failure": "record_pattern_and_continue",
      "timeout_exceeded": "record_partial_results"
    }
  },
  "output_configuration": {
    "results_format": "structured_json",
    "include_raw_data": true,
    "include_debug_info": true,
    "include_pattern_analysis": true,
    "compression": "gzip",
    "schema_version": "2.0"
  }
}